<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fitsSystemWindows="true"
    android:background="@color/grayd"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:layout_height="fill_parent"
    android:weightSum="1">
    <RelativeLayout
        android:id="@+id/rl_1"
        android:layout_width="fill_parent"
        android:layout_height="90.0dip"
        android:layout_above="@+id/btnSure"
        android:layout_centerHorizontal="true"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="50dp">

        <RelativeLayout
            android:id="@+id/layoutPhone"
            android:visibility="gone"
            android:background="@color/cardview_dark_background"
            android:layout_width="fill_parent"
            android:layout_height="45.0dip">

            <EditText
                android:id="@+id/ed_pwd"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@null"
                android:hint="请输入登录密码"
                android:inputType="textPassword"
                android:maxLength="11"
                android:paddingLeft="15.0dip"
                android:singleLine="true"
                android:textSize="18.0sp"
                android:layout_toLeftOf="@+id/tv_find"
                />

            <ImageView
                android:id="@+id/imgCancel"
                android:layout_width="16.0dip"
                android:layout_height="16.0dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12.0dip"
                android:visibility="invisible" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="45.0dip"
            android:background="@color/graye"
            android:layout_below="@+id/layoutPhone">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="#a3a3a3"
                android:id="@+id/imageView" />

            <EditText
                android:id="@+id/ed_phone"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@null"
                android:hint="请输入手机号码"
                android:inputType="number"
                android:maxLength="18"
                android:paddingLeft="15.0dip"
                android:textSize="18.0sp"
                android:layout_alignParentTop="true"
               />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:background="@color/graye"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="#a3a3a3" />

            <EditText
                android:id="@+id/ed_code"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@null"
                android:hint="请输入验证码 "
                android:inputType="number"
                android:maxLength="18"
                android:paddingLeft="15.0dip"
                android:textSize="18.0sp"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/btn_sendcode" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="获取验证码"
                android:padding="10dp"
                android:id="@+id/btn_sendcode"
                android:textColor="@color/white"
                android:background="@color/colorPrimaryDark"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/btn_enter"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:layout_marginLeft="18.0dip"
        android:layout_marginRight="18.0dip"
        android:background="@color/colorPrimaryDark"
        android:clickable="true"
        android:enabled="true"
        android:text="确认"
        android:textColor="#ffffffff"
        android:textSize="18.0sp"
        android:layout_marginTop="40dp"
        android:layout_above="@+id/btn_pwd"
        android:layout_centerHorizontal="true" />


</LinearLayout>