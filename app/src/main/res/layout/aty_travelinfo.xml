                    android:id="@+id/tv_travelTime"
                    />
                <TextView
                    android:text="min"
                    style="@style/showTextUnit"
                    />
                <TextView
                    android:text="驾驶时长"
                    style="@style/showStaticText"
                    />


            </LinearLayout>
            <View style="@style/divideh"/>
