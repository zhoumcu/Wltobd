<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayd">
    <TextView
        android:text="进气系统"
        android:layout_margin="@dimen/dp12"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_margin="@dimen/dp12"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="@dimen/dp12"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="正常范围"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="14.4~21.5%"
                android:id="@+id/tv_present"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            style="@style/dividev"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"/>
        <LinearLayout
            android:padding="@dimen/dp12"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="长期检测值"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="53.2%"
                android:id="@+id/tv_checklong"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            style="@style/dividev"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"/>
        <LinearLayout
            android:padding="@dimen/dp12"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="长期检测结果"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="节气门开度过高"
                android:id="@+id/tv_result"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            style="@style/dividev"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"/>
        <LinearLayout
            android:padding="@dimen/dp12"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="本次检测值"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="58.0%"
                android:id="@+id/tv_thisresult"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            style="@style/dividev"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"/>
        <LinearLayout
            android:padding="@dimen/dp12"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="本次检测结果"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="节气门开度过高"
                android:id="@+id/tv_thischeckresult"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            style="@style/dividev"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"/>
        <TextView
            android:text="背景知识
            节气门的积炭容易造成怠速低、怠速发抖、各种附属装置提速均匀失灵、收油灭车、尾气超标、费油等问题
            下面介绍几个减少、预防、清除积炭的方法：
            （1）加注高质量燃油
            （2）不要长时间怠速行驶
            （3）多跑高速、尽量提高手挡车的换挡转速
            （4）使用燃油清洁清洗添加剂
            （5）拆机清洗"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>