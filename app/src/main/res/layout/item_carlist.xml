<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="15dp"
        android:background="@color/graye"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/img_car"
            />
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="150dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="保时捷 918"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_carname" />
            <TextView
                android:text="Spyder2014款"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_carserial"
                android:layout_weight="1" />

        </LinearLayout>
        <TextView
            android:text="当前"
            android:textColor="@color/performs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_currentStatic" />
        <TextView
            android:text="默认"
            android:layout_marginLeft="20dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_defaultStatic" />

        <TextView
            android:text="切换"
            android:drawableTop="@mipmap/ico_change"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:id="@+id/tv_change" />
    </LinearLayout>
    <View
        style="@style/dividev"
        android:layout_margin="0dp"/>
    <LinearLayout
        android:background="@color/graye"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="盒子"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_obdBox"
            android:gravity="center"
            android:drawableTop="@mipmap/function_1"
            android:layout_weight="1" />

        <TextView
            android:text="默认"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_default"
            android:gravity="center"
            android:drawableTop="@mipmap/function_2"
            android:layout_weight="1" />

        <TextView
            android:text="详情"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_info"
            android:gravity="center"
            android:drawableTop="@mipmap/function_3"
            android:layout_weight="1" />

        <TextView
            android:text="删除"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_delete"
            android:gravity="center"
            android:drawableTop="@mipmap/function_4"
            android:layout_weight="1" />
    </LinearLayout>
    <View
        style="@style/dividev"
        android:layout_margin="0dp"
        android:background="@color/white"
        android:layout_height="@dimen/dp8"
        />
</LinearLayout>